<%= form_for(@report) do |f| %>
  <%= f.text_field  :title, 
                    maxlength: 100, 
                    placeholder: 'Title', 
                    required: true, 
                    minlength: 5,
                    maxlength: 100 %>
	<br>
  <%= f.text_field :locality, 
                   placeholder: 'Locality',
                   required: true, 
                   minlength: 5,
                   maxlength: 100 %>
  <br>
  <%= f.text_area :content, 
                  rows: 6,
                  required: true, 
                  minlength: 20,
                  maxlength: 1000000,
                  placeholder: 'Write about your experience' %>
	<br>
  <%= f.submit "Create a post" %>
<% end %>
