<%= form_for(@report) do |f| %>
  <%= f.text_field  :title, 
                    maxlength: 100, 
                    placeholder: 'Title', 
                    required: true, 
                    minlength: 4,
                    maxlength: 100 %>
	<br>
  <%= f.text_field :locality, 
                   placeholder: 'Locality',
                   required: true, 
                   minlength: 1,
                   maxlength: 100 %>
  <br>
  <%= f.text_area :content, 
                  rows: 6,
                  required: true, 
                  minlength: 10,
                  maxlength: 1000000,
                  placeholder: 'Report' %>
                  <!--placeholder: 'Report. Write about your experience' %>
                  -->
	<br>
  <%= f.submit "Publish" %>
<% end %>
