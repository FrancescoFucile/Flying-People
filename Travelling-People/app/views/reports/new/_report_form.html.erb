<%= form_for(@report) do |f| %>
  <%= f.text_field  :title, 
                    maxlength: 100, 
                    placeholder: 'Title', 
                    class: 'form-control',
                    required: true, 
                    minlength: 5,
                    maxlength: 100 %>
  <%= f.text_area :content, 
                  rows: 6,
                  required: true, 
                  minlength: 20,
                  maxlength: 1000000,
                  placeholder: 'Write about your experience', 
                  class: 'form-control' %>
  <%= f.submit "Create a post", class: 'form-control' %>
<% end %>
